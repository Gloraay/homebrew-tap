class Snyk < Formula
  desc "Find & fix known vulnerabilities in open-source dependencies"
  homepage "https://github.com/snyk/snyk"
  version "<%= @version %>"

  if OS.mac?
    url "<%= @url %>"
    sha256 "<%= @sha256 %>"
  elsif OS.linux?
    url "<%= @url_linux %>"
    sha256 "<%= @sha256_linux %>"
  end

  def install
    original = OS.linux? ? "snyk-linux" : "snyk-macos"
    mv original, "snyk"
    bin.install "snyk"
  end

  test do
    system "#{bin}/snyk --version"
  end
end
